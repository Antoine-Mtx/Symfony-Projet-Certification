                </div>
                <div>
                    <h6 class="m-0">{{ app.user.pseudo }}</h6>
                    <p class="small m-0">{{ app.user.email }}</p>
                </div>
            </div>
            <hr>
        </li>
        <!-- Links -->
        <li><a class="dropdown-item" href="{{ path('index_profile') }}"><i class="bi bi-person fa-fw me-2"></i>Mon profil</a></li>
        <li><a class="dropdown-item" href="{{ path('update_account') }}"><i class="bi bi-gear fa-fw me-2"></i>Paramètres du compte</a></li>
