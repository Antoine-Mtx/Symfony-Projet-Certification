{% extends 'base.html.twig' %}

{% block title %}Liste des composants{% endblock %}

{% block body %}

<h1>Composants existants</h1>

<p><a href="{{ path('add_composant') }}"><button type="button" class="btn btn-success">Ajouter un composant</button></a></p>

<div class="skill-card-gallery">
    <div class="row g-4">
        {% for composant in composants %}
            <div class="col-sm-6 col-lg-4 col-xl-3">
                {% if composant.type.affichage == 'carte' %}
                    {% include "composant/type/card.html.twig" %}
                {% elseif composant.type.affichage == 'graphique' %}
                    {% include "composant/type/graph.html.twig" %}    
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>


{% endblock %}

