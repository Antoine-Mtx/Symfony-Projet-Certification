{% extends 'base.html.twig' %}

{% block title %}Rénitialisez votre mot de passe{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header text-center">
            <h1>Rénitialisez votre mot de passe</h1>
        </div>
        <div class="card-body">
            {{ form_start(resetForm) }}
                {{ form_row(resetForm.plainPassword) }}
        </div>
        <div class="card-footer text-center">
                <button class="btn btn-primary">Rénitialiser le mot de passe</button>
            {{ form_end(resetForm) }}
        </div>
    </div>

{% endblock %}
