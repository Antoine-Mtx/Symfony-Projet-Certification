{% extends 'base.html.twig' %}

{% block title %}Types de composants{% endblock %}

{% block body %}

<h1>Types de composants</h1>

<p><a href="{{ path('add_type') }}"><button type="button" class="btn btn-success">Ajouter un type de composant</button></a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>type</th>
        </tr>
    </thead>
    <tbody>
        {% for type in types %}
        <tr>
            <td><a href="{{ path('show_type', {'id': type.id}) }}">{{ type }}</a></td>
        </tr>
        {% endfor %}
    </tbody>
</table> 
{% endblock %}
