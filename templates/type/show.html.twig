{% extends 'base.html.twig' %}

{% block title %}Composant : {{ type }}{% endblock %}

{% block body %}

<h1 class="text-center">Composant : {{ type }}</h1>

<h2>Description</h2>

<p> {{ type.description }} </p>

<h2>Mise en forme standard</h2>

<div class="d-flex justify-content-center">
    {% if type.affichage == 'carte' %}
        {% include "type/card.html.twig" %}
    {% elseif type.affichage == 'graphique' %}
        {% include "type/graphique.html.twig" %}    
    {% endif %}
</div>

{% endblock %}